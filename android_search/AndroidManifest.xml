<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.virtual_hotel_agent.search"
    android:versionCode="59"
    android:versionName="1.0.12" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />

    <permission
        android:name="com.virtual_hotel_agent.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- <uses-permission android:name="android.permission.READ_LOGS" />    ACRA uses it to send logs - but 1) don't want to scare users, 2) app logs are disabled in release, 3) traceback is enough -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />  modify audio routing - commented out GUI -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" /> <!-- needed for getDeviceID() for uid param -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <!-- Required for Maps -->
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="com.virtual_hotel_agent.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <!-- android:icon="@drawable/original_icon_512" -->
    <application
        android:name=".VHAApplication"
        android:icon="@drawable/hotel_icon512"
        android:label="@string/app_name" >
        <activity
            android:name=".controllers.activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan" >

            <!-- android:theme="@android:style/Theme.NoTitleBar"> -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.bluetooth.a2dp.profile.action.CONNECTION_STATE_CHANGED" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.gms.actions.SEARCH_ACTION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.activities.HotelMapActivity"
            android:label="Hotel Area"
            android:theme="@style/Theme.AppCompat.Light"
             />
        <activity
            android:name=".controllers.activities.MyPreferences"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>

        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name=".controllers.activities.BugReportDialog"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name=".controllers.activities.AboutDialog"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name=".controllers.activities.VolumeSettingsDialog"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />

        <service android:name="com.google.analytics.tracking.android.CampaignTrackingService" />

        <receiver
            android:name="com.google.analytics.tracking.android.CampaignTrackingReceiver"
            android:exported="true" />

        <intent-filter>
            <action android:name="com.android.vending.INSTALL_REFERRER" />
        </intent-filter>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDV0nvSYIL7zIQ6CBh_A-s7YMg0dZMhfiM" />
        <!-- Debug from Ubuntu -->


        <!-- Release: -->
        <!-- android:value="AIzaSyAy9PYM3qzNSfg9vv-d4C_c1OD6ULAA-Yc"/> -->
        <!-- Debug from Mac -->
        <!-- android:value="AIzaSyBPnkaWt4r_z86YQihDfDHH3armRZNTnrs" /> -->

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".controllers.activities.ImageGalleryActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_image_gallery"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".controllers.activities.HotelDetailActivity"
            android:label="@string/title_hotel_detail"
            android:theme="@style/Theme.AppCompat.Light"
            android:parentActivityName=".controllers.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.activities.MainActivity" />
        </activity>
    </application>

</manifest>