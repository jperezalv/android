<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="4dp"
     >

      <com.virtual_hotel_agent.search.util.ChatBalloon 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:animateLayoutChanges="true"
          android:layout_gravity="left|top"
          android:elevation="3dp"
          android:layout_marginRight="20dp"
          android:layout_marginBottom="6dp"
          android:layout_marginTop="4dp"
          app:pointerSide="Left"
           >

		<LinearLayout 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:animateLayoutChanges="true"
          android:padding="10dp"
		    >

	      <TextView
	            android:id="@+id/label"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:visibility="gone"
	            android:layout_margin="2dip"
	            android:textSize="16sp"
	            android:text="Lorem ipsum bla bla asdfg dfswe"
	            android:textColor="@android:color/primary_text_light" />
	      
	      <RelativeLayout
	          android:id="@+id/edit_chat_item"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:gravity="start"
	          android:orientation="horizontal" >

<!-- 	              android:minHeight="56dp" -->

	          <EditText
	              android:id="@+id/editText"
	              android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:layout_alignParentTop="true"
	              android:layout_alignParentLeft="true"
	              android:inputType="textMultiLine"
	              android:layout_toLeftOf="@+id/buttonDelete"
	              android:layout_marginLeft="-2dip"
	              android:gravity="top"
	              android:text="Lorem ipsum bla bla"
	              android:textColor="@android:color/primary_text_light"
	              android:textSize="16sp" 
	              />
	
	        
	          
	           <ImageButton
	              android:id="@+id/buttonMicrophone"
	              android:layout_width="wrap_content"
	              android:layout_height="48dp"
	              android:layout_alignParentTop="true"
	              android:layout_alignParentRight="true"
	              android:background="@drawable/microphone_48"
	              android:backgroundTint="#ccc"
	              android:padding="12dp"
	              android:adjustViewBounds="true"
			      android:scaleType="fitCenter" 
	              android:contentDescription="@string/microphone_button"/>
	             
		           
	          <ImageButton
	              android:id="@+id/buttonDelete"
	              android:layout_width="wrap_content"
	              android:layout_height="48dp"
	              android:layout_toLeftOf="@+id/buttonMicrophone"
	              android:layout_alignParentTop="true"
	              android:background="@drawable/remove_utterance"
	              android:backgroundTint="#ccc"
	              android:padding="12dp"
	              android:adjustViewBounds="true"
			      android:scaleType="fitCenter" 	              
	              android:contentDescription="@string/delete_utterance_button"/>
	      </RelativeLayout>

	      </LinearLayout>
 	</com.virtual_hotel_agent.search.util.ChatBalloon>
</LinearLayout>