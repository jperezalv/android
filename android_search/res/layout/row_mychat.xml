<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_chat_in_session_bg"
    android:orientation="horizontal" >

    <!-- ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dip"
        android:src="@drawable/my_chat" 
        android:contentDescription="@string/chat_icon_description"/> -->
 
     <TextView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="2dip"
        android:paddingBottom="0dip"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:typeface="monospace"
        android:text="@string/eva_icon"
        android:textColor="@color/my_chat_in_session_text"
        android:textSize="20sp"/>
 
    
    <TextView
        android:id="@+id/label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:paddingBottom="7dip"
        android:textColor="@color/my_chat_in_session_text"
        android:textSize="16sp" />
    
    <EditText 
        android:id="@+id/editText"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        />

</LinearLayout>