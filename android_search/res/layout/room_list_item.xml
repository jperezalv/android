<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/roomListItem"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/hotel_background"
  android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         

        >
        <ImageView 
            android:id="@+id/roomImage"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentRight="true"
            android:visibility="visible"
            android:background="@android:drawable/picture_frame"
            android:src="@drawable/slanted_icon_72"
            />
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/roomImage"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            >
        <TextView
            android:id="@+id/promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Name"
            android:textColor="#FF000000"
            android:textSize="16sp"
            android:ellipsize="marquee"
        	android:focusable="true"
        	android:focusableInTouchMode="true"
        	android:scrollHorizontally="true" >
        </TextView>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/promo"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/full_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate"
                android:textColor="@color/high_price_color"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/per_night_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/night â‡¢ "
                android:textColor="#ff000000"
                android:textSize="14dip" />

                  <TextView
                android:id="@+id/promo_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate"
                android:textColor="@color/low_price_color"
                android:textSize="24dip" />

            <TextView
                android:id="@+id/per_night_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/night"
                android:textColor="#ff000000"
                android:textSize="14dip" />
            
           </LinearLayout>

        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/linearLayout1"
            android:text="Details" 
            android:textColor="#222222"/>
		</LinearLayout>
        
    </RelativeLayout>

</LinearLayout>
