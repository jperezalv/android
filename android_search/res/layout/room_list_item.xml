<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/roomListItem"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/hotel_background"
  android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft" 

        >

        <TextView
            android:id="@+id/promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Room Name"
            android:textColor="#FF000000"
            android:textSize="16sp"
            android:ellipsize="marquee"
        	android:focusable="true"
        	android:focusableInTouchMode="true"
        	android:scrollHorizontally="true" >
        </TextView>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/promo"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/full_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate"
                android:textColor="#FF7777CC"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/per_night_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/night   â‡¢  "
                android:textColor="#ff000000"
                android:textSize="14dip" />

                  <TextView
                android:id="@+id/promo_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate"
                android:textColor="#FF0000FF"
                android:textSize="24dip" />

            <TextView
                android:id="@+id/per_night_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/night"
                android:textColor="#ff000000"
                android:textSize="14dip" />
            
           </LinearLayout>

        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/linearLayout1"
            android:text="Details" 
            android:textColor="#222222"/>

        <LinearLayout
            android:id="@+id/roomDescrptionLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/details"
            android:background="#ffe3e3e3"
            android:visibility="gone"
            android:orientation="vertical"
            android:padding="3dp" >
            
            <TextView
                android:id="@+id/roomDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:textColor="#000"
                android:maxHeight="40dp"
                android:scrollbars="vertical"
                android:text="Lorem ipsum badsfg asdfg dsfg asdf aserfqw "
                 />

            <Button
                android:id="@+id/buttonChooseRoom"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/checkout" />
            
         </LinearLayout>
    </RelativeLayout>

</LinearLayout>
