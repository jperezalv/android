         >

     <ImageButton
        android:id="@+id/search_button"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/microphone_button"
        android:onClick="myClickHandler"
        android:padding="12dp"
        android:src="@drawable/animated_microphone"
        android:text="@string/button"
        android:elevation="8dp"
        android:hapticFeedbackEnabled="true"
        android:background="@drawable/transition_button_activate"
         />
     
    <com.evaapis.android.SoundLevelView
        android:id="@+id/surfaceView_sound_wave"
        android:layout_width="58dp"
        android:layout_height="58dp"
