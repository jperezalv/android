<!-- Based on this blog post: http://blog.peterkuterna.net/2011/09/viewpager-meets-swipey-tabs.html -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/the_main_layout"
    xmlns:swipeytabs="http://schemas.android.com/apk/res/com.evature.search"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.evature.search.views.SwipeyTabs
        android:id="@+id/swipeytabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        swipeytabs:bottomBarColor="#ff96aa39"
        swipeytabs:bottomBarHeight="2dip"
        swipeytabs:tabIndicatorHeight="3dip"
        android:background="#ff3b3b3b"/>

    <com.evature.components.MyViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_below="@id/swipeytabs"
        android:layout_above="@+id/search_button"
        android:layout_height="fill_parent" />

    
     <ImageButton
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_button"
        android:contentDescription="@string/microphone_button"
        android:onClick="myClickHandler"
        android:padding="14dp"
        android:src="@drawable/microphone_icon"
        android:text="@string/button" />
</RelativeLayout>