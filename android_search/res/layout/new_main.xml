<!-- Based on this blog post: http://blog.peterkuterna.net/2011/09/viewpager-meets-swipey-tabs.html -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/the_main_layout"
    xmlns:swipeytabs="http://schemas.android.com/apk/res/com.virtual_hotel_agent.search"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.virtual_hotel_agent.search.views.SwipeyTabs
        android:id="@+id/swipeytabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        swipeytabs:bottomBarColor="#ff96aa39"
        swipeytabs:bottomBarHeight="2dip"
        swipeytabs:tabIndicatorHeight="3dip"
        android:background="#ff3b3b3b"/>

    <com.virtual_hotel_agent.components.MyViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_below="@id/swipeytabs"
        android:layout_above="@+id/search_button"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_above="@+id/search_button" 
        android:visibility="gone"
        android:id="@+id/status_panel"
        >

        <TextView
            android:id="@+id/text_listeningStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/listening_" />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>

    <com.evaapis.android.SoundLevelView
        android:id="@+id/surfaceView_sound_wave"
        android:layout_width="wrap_content"
        android:layout_height="80dip"
        android:layout_margin="20dip"
        android:background="@color/half_black"
        android:layout_centerInParent="true"
        android:visibility="gone"
         />
    
    
    
    
     <ImageButton
        android:id="@id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_button"
        android:contentDescription="@string/microphone_button"
        android:onClick="myClickHandler"
        android:padding="14dp"
        android:src="@drawable/microphone_icon"
        android:text="@string/button" />
</RelativeLayout>