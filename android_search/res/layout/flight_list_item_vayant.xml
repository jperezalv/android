<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginRight="5dip"
    android:enabled="false"
    android:focusable="true" 
    android:baselineAligned="false"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1.0"
      android:orientation="horizontal" >

        <TextView
            android:id="@+id/itinerary_view_departure_time"
            android:layout_width="0.0px"
            android:layout_height="fill_parent"
            android:layout_marginRight="1.0dip"
            android:layout_weight="1.0"
            android:text="Departure"
            android:textColor="@color/cell_button_text"
            android:textSize="14.0sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/itinerary_view_arrival_time"
            android:layout_width="0.0px"
            android:layout_height="fill_parent"
            android:layout_marginRight="1.0dip"
            android:layout_weight="1.0"
            android:text="Arrival"
            android:textColor="@color/itinerary_arrival_time"
            android:textSize="14.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itinerary_view_airline"
            android:layout_width="48.0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="1.0dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center"
            android:text="Airline"
            android:textColor="@color/itinerary_airline"
            android:textSize="11.0sp"
            android:textStyle="bold" />

     <TextView
            android:id="@+id/itinerary_view_price"
            android:layout_width="80.0dip"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Price"
            android:textColor="@color/itinerary_airline"
            android:textSize="11.0sp"
            android:textStyle="bold" />
</LinearLayout>