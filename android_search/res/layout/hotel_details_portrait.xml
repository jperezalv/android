<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/search_background" >

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vha_background"
        android:padding="4dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/top_logo" />

        <Button
            android:id="@+id/selectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/button"
            android:gravity="center"
            android:padding="8dp"
            android:text="Select"
            android:textColor="#FFFFFFFF"
            android:textSize="14dp" />
         <Button
            android:id="@+id/mapButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/selectButton"
            android:background="@drawable/button"
            android:gravity="center"
            android:padding="8dp"
            android:text="Map"
            android:textColor="#FFFFFFFF"
            android:textSize="14dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/hotelName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleLayout"
        android:text="..."
        android:textColor="#ff038fd7"
        android:textSize="24dip"
        android:textStyle="bold" >
    </TextView>

    <Gallery
        android:id="@+id/hotelGallery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/hotelName" />

    
   
    
    <ImageView
        android:id="@+id/dividerElement"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hotelGallery"        
        android:src="@drawable/divider" >
    </ImageView>
    

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dividerElement" >

        <LinearLayout
            android:id="@+id/detailsLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical" >

            <RelativeLayout
        android:id="@+id/relativeLayout0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hotelGallery"
        android:layout_weight="1"
         >

        <LinearLayout
            android:id="@+id/starRatingLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical" >

            <RatingBar
                android:id="@+id/ratingBarStar"
                android:layout_width="118dp"
                android:layout_height="32dp"
                android:isIndicator="true"
                android:paddingLeft="10dp"
                android:progressDrawable="@drawable/rating_layers" >
            </RatingBar>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tripAdvisoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/starRatingLayout"
            android:orientation="vertical"
            android:paddingLeft="10dip" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TripAdvisor"
                android:textStyle="bold"
                android:textColor="#ff000000"
                android:paddingRight="20dp" >
            </TextView>

            <RatingBar
                android:id="@+id/ratingBarTripAdvisor"
                android:layout_width="118dp"
                android:layout_height="32dp"
                android:isIndicator="true"
                android:paddingRight="10dp"
                android:progressDrawable="@drawable/trip_advisor_rating_layers" >

            </RatingBar>
        </LinearLayout>
    </RelativeLayout>
            
            <GridView
                android:id="@+id/amenitiesGridview"
                android:layout_width="fill_parent"
                android:layout_height="64dip"
                android:columnWidth="64dp"
                android:gravity="center"
                android:horizontalSpacing="20dp"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:verticalSpacing="20dp" />

            <WebView
                android:id="@+id/propertyDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location" >
            </WebView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>