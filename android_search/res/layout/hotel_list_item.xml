<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hotel_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#ffffff"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="3dp"
        card_view:cardElevation="6dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
             >

            <ImageView
                android:id="@+id/hotelImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/hotel_image"
                android:adjustViewBounds="true"
                android:src="@drawable/slanted_icon_128" >
            </ImageView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                 >

                <!-- Row 1: Name -->

                <TextView
                    android:id="@+id/hotelName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="2dp"
                    android:singleLine="false"
                    android:layout_alignParentTop="true"
                    android:text="Hotel Name Bla Bla Yada Yada"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:transitionName="hotelName"
                    tools:ignore="HardcodedText" />

                <!-- android:freezesText="true" -->


                <!-- Row 2: Location -->

                <TextView
                    android:id="@+id/hotelLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hotelName"
                    android:layout_gravity="top"
                    android:ellipsize="marquee"
                    android:paddingStart="4dp"
                    android:paddingEnd="2dp"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:text="Located near city center"
                    android:textColor="#777777"
                    tools:ignore="HardcodedText" />

                <!-- Row 3: Star Rating-->
                
   			    <RatingBar
	                    android:id="@+id/rating"
	                    android:layout_width="wrap_content"
	                    android:layout_height="20dip"
	                    android:isIndicator="true"
	                    android:layout_centerHorizontal="true"
	                    android:layout_below="@id/hotelLocation"
	                    android:progressDrawable="@drawable/rating_layers_tiny"
	                    android:transitionName="hotelStarRating" />    
				    
                

