<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hotel_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        card_view:cardBackgroundColor="#efefef"
        card_view:cardElevation="6dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="116dip"
            android:orientation="horizontal"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/hotelImage"
                android:layout_width="116dip"
                android:layout_height="match_parent"
                android:minHeight="116dip"
                android:contentDescription="@string/hotel_image"
                android:padding="2dp"
                android:background="#444"
                android:src="@drawable/slanted_icon_72" >
            </ImageView>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_toEndOf="@id/hotelImage" >

                <!-- Row 1: Name -->

                <TextView
                    android:id="@+id/hotelName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="2dp"
                    android:background="#444"
                    android:singleLine="false"
                    android:layout_alignParentTop="true"
                    android:text="Hotel Name Bla Bla Yada Yada"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:transitionName="hotelName"
                    tools:ignore="HardcodedText" />

                <!-- android:freezesText="true" -->


                <!-- Row 2: Location -->

                <TextView
                    android:id="@+id/hotelLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hotelName"
                    android:layout_gravity="top"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="Located near city center"
                    android:textColor="#777777"
                    tools:ignore="HardcodedText" />

                <!-- Row 3: Star Rating-->
                
   			    <RatingBar
	                    android:id="@+id/rating"
	                    android:layout_width="wrap_content"
	                    android:layout_height="20dip"
	                    android:layout_marginStart="24dp"
	                    android:isIndicator="true"
	                    android:layout_alignParentBottom="true"
	                    android:layout_alignParentStart="true"
	                    android:progressDrawable="@drawable/rating_layers_tiny"
	                    android:transitionName="hotelStarRating" />    
				    
                

                <!-- trip advisor -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_above="@id/rating"
                    android:gravity="start"
                    android:orientation="horizontal" >

                    
                     
                    <ImageView
                        android:id="@+id/tripAdvisorStrip"
                        android:layout_width="100dip"
                        android:layout_height="20dip"
                        android:contentDescription="@string/trip_advisor_icon"
                        android:transitionName="hotelTripAdvRating" />

                    <TextView
                         android:id="@+id/tripAdvisorReviews"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginEnd="2dip"
                         android:text="(3,456)"
                         android:textColor="#afafaf"
                         android:textSize="11sp"
                         tools:ignore="HardcodedText" />
                </LinearLayout>
			    
                
                <!-- Price -->

                    <LinearLayout
                        android:id="@+id/price_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ee8cc34b"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_vertical|end"
                        android:orientation="horizontal"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingRight="4dp"
                        android:paddingLeft="4dp"
                         >

<!--                         <TextView -->
<!--                         android:id="@+id/textFromTitle" -->
<!--                         android:layout_width="wrap_content" -->
<!--                         android:layout_height="wrap_content" -->
<!--                         android:textColor="@color/white" -->
<!--                         android:layout_weight="1" -->
<!--                         android:layout_gravity="bottom" -->
<!--                         android:text="â‰¥" -->
<!--                         android:gravity="end" -->
<!--                         android:layout_marginRight="2dip" -->
<!--                         android:textSize="18sp" /> -->

                        <TextView
                            android:id="@+id/pricePerNight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$180.20"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/perNightTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/per_night"
                            android:layout_gravity="bottom"
                            android:gravity="bottom|end"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout> <!-- tripadvisor -->
                    
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_above="@id/price_layout"
                        android:background="#444" >

                        <TextView
                            android:id="@+id/hotelDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/target"
                            android:singleLine="true"
                            android:text="15Km"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </FrameLayout>
                    
        	</RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>