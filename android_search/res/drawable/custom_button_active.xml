<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#545474" />
            <stroke
                android:width="2dp"
                android:color="#ff99bbff" />
            <corners
                android:radius="5dp" />
            
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#8484d4"
                android:endColor="#4747a7"
                android:angle="315" />
            <stroke
                android:width="2dp"
                android:color="#ff5599ff" />
            <corners
                android:radius="5dp" />
            
        </shape>
    </item>
</selector>