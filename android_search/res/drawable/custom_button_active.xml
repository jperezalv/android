<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#745454" />
            <stroke
                android:width="2dp"
                android:color="#ffffbb99" />
            <corners
                android:radius="200dp" />
            
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#d48484"
                android:endColor="#a74747"
                android:angle="315" />
            <stroke
                android:width="2dp"
                android:color="#ffff9955" />
            <corners
                android:radius="200dp" />
            
        </shape>
    </item>
</selector>