<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#646484" />
            <stroke
                android:width="1dp"
                android:color="#ff88aaff" />
            <corners
                android:radius="5dp" />
           
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#646484"
                android:endColor="#171757"
                android:angle="315" />
            <stroke
                android:width="1dp"
                android:color="#ff7799dd" />
            <corners
                android:radius="5dp" />
            
        </shape>
    </item>
</selector>