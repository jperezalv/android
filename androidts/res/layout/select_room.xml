<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="@drawable/search_background">
	<RelativeLayout android:id="@+id/relativeLayout2"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		>

		<ImageView
		    android:id="@+id/hotelThumbnail"
		    android:layout_width="128dip"
		    android:layout_height="128dip"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:padding="4dip"
		    android:src="@drawable/eva_hotel_icon_small" >
</ImageView>
		<TextView android:text="TextView" android:textSize="24dip"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:id="@+id/hotelName"
				android:layout_toRightOf="@id/hotelThumbnail"></TextView>
		<TextView android:text="Location" android:textSize="12dip"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:id="@+id/location"
				android:layout_below="@id/hotelName"
				android:layout_alignLeft="@id/hotelName"></TextView>
		<RatingBar android:layout_height="wrap_content" android:id="@+id/starRating"
				 android:layout_width="wrap_content"
				 android:layout_below="@id/location"
				android:layout_alignParentRight="true"
				android:progressDrawable="@drawable/rating_layers" android:isIndicator="true"></RatingBar>
		<TextView android:text="Star Rating" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/startRatingTitle"
				android:layout_above="@id/starRating" android:layout_alignLeft="@id/starRating"></TextView>
	</RelativeLayout>
	<ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/divider" android:id="@+id/searchDivider"></ImageView>
	<ListView android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/roomListView"  
				android:cacheColorHint="#00000000"
				android:divider="@drawable/divider"></ListView>  
	<ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/room_select_bottom"
        android:layout_weight="0.2" />
    
	
</LinearLayout>
